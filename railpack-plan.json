{
  "providers": {
    "node": {
      "version": "22.21.1"
    }
  },
  "phases": {
    "install": {
      "commands": [
        "corepack enable",
        "corepack prepare pnpm@latest --activate",
        "pnpm install --frozen-lockfile --prefer-offline"
      ]
    },
    "build": {
      "commands": [
        "bash -c 'export NEXT_PUBLIC_API_BASE_URL=${NEXT_PUBLIC_API_BASE_URL:-http://localhost:8000} && export NEXT_PUBLIC_FOOTBALL_API_URL=${NEXT_PUBLIC_FOOTBALL_API_URL:-${NEXT_PUBLIC_API_BASE_URL:-http://localhost:8000}} && pnpm run build'"
      ]
    }
  },
  "start": {
    "command": "pnpm run start"
  }
}

